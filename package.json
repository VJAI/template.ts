{
  "name": "typescript-project-template",
  "version": "1.0.0",
  "description": "A simple typescript project template",
  "scripts": {
    "build": "rm -rf build && npm run build:cjs && npm run build:esm && npm run build:es5 && npm run build:umd",
    "build:cjs": "tsc --build tsconfig.json",
    "build:esm": "tsc --build tsconfig.esm.json",
    "build:es5": "tsc --build tsconfig.es5.json",
    "build:umd": "webpack",
    "clean": "tsc --build --clean tsconfig.json tsconfig.esm.json tsconfig.es5.json",
    "test": "nyc ts-mocha -p tsconfig.json test/**/*.test.ts --exclude 'test/platform/browser/**/*.ts'",
    "test:browser": "nyc karma start --single-run",
    "tdd:browser": "karma start",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "codecov:browser": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "watch": "tsc --build --watch tsconfig.json tsconfig.esm.json tsconfig.es5.json"
  },
  "keywords": [
  ],
  "author": "Vijaya Anand <vijay.prideparrot@gmail.com>",
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/estree": "^0.0.50",
    "@typescript-eslint/eslint-plugin": "4.29.0",
    "@typescript-eslint/parser": "4.29.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.9.0",
    "@types/semver": "^7.3.8",
    "@types/sinon": "^10.0.2",
    "@types/webpack-env": "^1.16.2",
    "beautify-benchmark": "0.2.4",
    "benchmark": "2.1.4",
    "codecov": "^3.8.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "gh-pages": "3.2.3",
    "husky": "4.3.8",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^5.0.0",
    "lerna": "3.22.1",
    "lerna-changelog": "1.0.1",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "ts-loader": "^9.2.5",
    "ts-mocha": "^8.0.0",
    "typedoc": "0.21.5",
    "typescript": "^4.3.5",
    "uglifyjs": "^2.4.11",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.1",
    "webpack-merge": "^5.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:changed",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
